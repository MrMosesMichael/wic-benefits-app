{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "src/routes/products.ts",
    "src/routes/product-images.ts",
    "src/scripts/sync-product-images.ts",
    "src/scripts/test-image-storage.ts",
    "src/services/ProductImageSyncService.ts"
  ]
}
