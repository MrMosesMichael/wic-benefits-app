# APL Ingestion Service Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://wic_user:password@localhost:5432/wic_benefits

# ============================================
# Michigan APL Configuration
# ============================================

# Michigan APL Download URL
# Get the latest URL from: https://www.michigan.gov/mdhhs/assistance-programs/wic/wicvendors/wic-foods
MICHIGAN_APL_DOWNLOAD_URL=https://www.michigan.gov/.../michigan-wic-apl.xlsx

# Michigan Sync Schedule (cron format)
# Default: Daily at 2 AM Eastern Time
# Examples:
#   0 2 * * *     = Daily at 2 AM
#   0 */6 * * *   = Every 6 hours
#   0 0 * * 0     = Weekly on Sunday at midnight
MICHIGAN_SYNC_CRON=0 2 * * *

# ============================================
# North Carolina APL Configuration (Future)
# ============================================
# NC_APL_URL=
# NC_SYNC_CRON=0 3 * * *

# ============================================
# Florida APL Configuration (Future)
# ============================================
# FL_APL_URL=
# FL_SYNC_CRON=0 4 * * *

# ============================================
# Oregon APL Configuration (Future)
# ============================================
# OR_APL_URL=
# OR_SYNC_CRON=0 5 * * *

# ============================================
# Notifications (Future)
# ============================================
# SLACK_WEBHOOK_URL=
# EMAIL_ALERTS_TO=admin@wic-benefits-app.org
# SENTRY_DSN=

# ============================================
# Monitoring (Future)
# ============================================
# DATADOG_API_KEY=
# NEW_RELIC_LICENSE_KEY=

# ============================================
# Worker Configuration
# ============================================

# Node environment
NODE_ENV=development

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable debug logging
DEBUG=false

# Worker restart on failure
AUTO_RESTART=true

# Max consecutive failures before stopping
MAX_CONSECUTIVE_FAILURES=5
