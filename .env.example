# WIC Benefits Assistant - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ==============================================================================
# Walmart Inventory API
# ==============================================================================
# Get credentials at: https://developer.walmart.com/
# Register for an account, create an application, and get approval (1-2 business days)

# Required for Walmart inventory integration
WALMART_CLIENT_ID=your_walmart_client_id_here
WALMART_CLIENT_SECRET=your_walmart_client_secret_here

# Optional API key (required for some Walmart endpoints)
WALMART_API_KEY=your_walmart_api_key_here

# ==============================================================================
# Kroger Inventory API (Future - Task I1.3)
# ==============================================================================
# Get credentials at: https://developer.kroger.com/
# KROGER_CLIENT_ID=your_kroger_client_id_here
# KROGER_CLIENT_SECRET=your_kroger_client_secret_here

# ==============================================================================
# Target Inventory API (Future)
# ==============================================================================
# TARGET_CLIENT_ID=your_target_client_id_here
# TARGET_CLIENT_SECRET=your_target_client_secret_here

# ==============================================================================
# Database Configuration
# ==============================================================================
# PostgreSQL connection (for production use)
# DATABASE_URL=postgresql://user:password@localhost:5432/wic_benefits_db

# SQLite (for local development)
# DATABASE_PATH=./data/local.db

# ==============================================================================
# Redis Cache (Optional - for distributed caching)
# ==============================================================================
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password

# ==============================================================================
# Google Services
# ==============================================================================
# For store location enrichment via Google Places API
# GOOGLE_PLACES_API_KEY=your_google_places_api_key

# For Google Maps integration
# GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ==============================================================================
# Datadog Monitoring (Optional)
# ==============================================================================
# For observability and monitoring
# DATADOG_API_KEY=your_datadog_api_key
# DATADOG_APP_KEY=your_datadog_app_key

# ==============================================================================
# Authentication & Security
# ==============================================================================
# JWT secret for user authentication
# JWT_SECRET=your_jwt_secret_key_here
# JWT_EXPIRY=7d

# Session secret
# SESSION_SECRET=your_session_secret_here

# ==============================================================================
# Push Notifications
# ==============================================================================
# Firebase Cloud Messaging (for push notifications)
# FCM_SERVER_KEY=your_fcm_server_key
# FCM_SENDER_ID=your_fcm_sender_id

# Apple Push Notification Service (APNS)
# APNS_KEY_ID=your_apns_key_id
# APNS_TEAM_ID=your_apns_team_id
# APNS_KEY_PATH=./certs/apns_key.p8

# ==============================================================================
# AWS Services (Optional)
# ==============================================================================
# For cloud hosting and services
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# S3 for image storage
# AWS_S3_BUCKET=wic-benefits-images
# AWS_S3_REGION=us-east-1

# SQS for message queues
# AWS_SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/your-account/wic-queue

# ==============================================================================
# Application Configuration
# ==============================================================================
# Node environment
NODE_ENV=development

# API server port
PORT=3000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:19006

# API base URL
API_BASE_URL=http://localhost:3000/api

# ==============================================================================
# Feature Flags
# ==============================================================================
# Enable/disable features for testing
ENABLE_WALMART_INVENTORY=true
ENABLE_KROGER_INVENTORY=false
ENABLE_FORMULA_ALERTS=true
ENABLE_CROWDSOURCED_INVENTORY=false
ENABLE_OFFLINE_MODE=true

# ==============================================================================
# Logging & Debugging
# ==============================================================================
# Log level: error, warn, info, debug, verbose
LOG_LEVEL=info

# Debug namespaces (comma-separated)
# DEBUG=inventory:*,store:*,auth:*

# ==============================================================================
# Rate Limiting Configuration
# ==============================================================================
# Override default rate limits (optional)
# WALMART_REQUESTS_PER_DAY=5000
# KROGER_REQUESTS_PER_DAY=10000

# ==============================================================================
# Cache Configuration
# ==============================================================================
# Cache TTL in minutes
# CACHE_TTL_DEFAULT=30
# CACHE_TTL_FORMULA=15
# CACHE_ENABLED=true
# CACHE_MAX_SIZE=10000

# ==============================================================================
# Development & Testing
# ==============================================================================
# Skip authentication in development (NOT FOR PRODUCTION)
# DEV_SKIP_AUTH=false

# Use mock services instead of real APIs
# USE_MOCK_SERVICES=false

# Test Walmart store ID for development
# DEV_TEST_STORE_ID=walmart-1234

# Test formula UPC for development
# DEV_TEST_FORMULA_UPC=055000012345
